<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="283dp" android:height="54dp">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <gradient android:type="linear" android:useLevel="false" android:startColor="#ff0a80f5" android:endColor="#ff0bcceb" android:angle="-135" />
            <item android:name="android:shadowColor">#29000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">3</item>
        </shape>
    </item>
</selector>
