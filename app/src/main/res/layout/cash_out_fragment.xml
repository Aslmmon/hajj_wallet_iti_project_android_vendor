<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragments.CashOut.CashOutFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
        android:background="@color/whiteCyan"
                  android:gravity="center">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/your_balance_is"
                  android:textSize="42sp"
            android:id="@+id/balance"
            android:textColor="@color/black"
                  android:fontFamily="@font/cookie"
                  android:textStyle="bold"
                  android:gravity="center"/>

        <TextView
            android:id="@+id/balanceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="..."
            android:fontFamily="@font/goblin_one"
            android:textSize="80sp"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
            android:id="@+id/createWallet"
            style="@style/btnStyle"
        android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="25dp"
        android:textSize="22sp"
            android:text="@string/create_wallet" />

</FrameLayout>